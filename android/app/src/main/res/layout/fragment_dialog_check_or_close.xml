<?xml version="1.0" encoding="utf-8"?>
<voiddog.org.game24.ui.VerticalMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_content"
        android:textColor="@color/white"
        android:textSize="@dimen/system_dialog_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.beardedhen.androidbootstrap.FontAwesomeText
            android:id="@+id/fat_close"
            app:fa_icon="fa-close"
            android:textColor="@color/danger"
            android:layout_marginRight="@dimen/default_dis_size_big"
            android:layout_marginTop="@dimen/default_dis_size_big"
            android:textSize="@dimen/system_dialog_fontawesome_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.beardedhen.androidbootstrap.FontAwesomeText
            android:id="@+id/fat_check"
            app:fa_icon="fa-check-circle-o"
            android:textColor="@color/green"
            android:layout_marginLeft="@dimen/default_dis_size_big"
            android:layout_marginTop="@dimen/default_dis_size_big"
            android:textSize="@dimen/system_dialog_fontawesome_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</voiddog.org.game24.ui.VerticalMenuLayout>